{# empty Twig template #}
{% block title %}
  
{% endblock %}
	{% block body_title %}
		<h1>Liste des films</h1>
	{% endblock %}
{% block movie_body %}
{% for movie in listMovies %}
      <li class="li-list">
          <i class="icon-ok movie-{{movie.isPret}}check"></i>
        <a href="#" class="movie-view" id="{{ movie.id }}">
          {{ movie.title }}
        </a>
        nbDisc {{ movie.nbDisc }},
        numMovie {{ movie.numMovie }}
      </li>
    {% else %}
      <li>Pas (encore !) de films</li>
    {% endfor %}
  <ul class="pagination">
	{% for p in range(1, nbPages) %}
	<li{% if p == page %} class="active"{% endif %}>            
	  <a href="#" class="list-pagination" id="{{ p }}">{{ p }}</a>
	</li>
	{% endfor %}
  </ul>
    <script>
    $(".list-pagination").click(function(e){
        showLoader();
        e.preventDefault();
        var page = $(this).attr("id");
        listMovie(page);
    });
    $(".movie-view").click(function(e){
        showLoader();
        e.preventDefault(); // EmpÃªche le navigateur de suivre le lien.
        var id = $(this).attr("id");
        viewDetail(id);
    });
    </script>
{% endblock %}