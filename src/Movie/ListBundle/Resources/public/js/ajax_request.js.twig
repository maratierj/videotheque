function viewDetail(id){
    $.ajax({
	type: "GET",
	url: Routing.generate('movie_list_view', {'movie_id': id}),
	success: function(retour){
            //alert(retour);
            document.title = "Fiche d'un film";
            $("#content").html(retour);
	},
        error : function(error){
            alert('erreur : ' + error);
        }
    });    
}

