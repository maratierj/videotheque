{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	<div class="form-group">
		<label for="username" class="col-sm-4 control-label">Utilisateur</label>
		<div class="col-sm-8">
			{# Génération de l'input. #}
			<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
		</div>
	</div>
	
	<div class="form-group">
		<label for="password" class="col-sm-4 control-label">Mot de passe</label>
		<div class="col-sm-8">
			{# Génération de l'input. #}
			<input type="password" id="password" name="_password" required="required" class="form-control" />
		</div>
	</div>
	
	<div class="form-group">
		<label for="remember_me" class="col-sm-4 control-label">Se souvenir de moi</label>
		<div class="col-sm-8">
			{# Génération de l'input. #}
			<input type="checkbox" id="remember_me" name="_remember_me" value="on" class="checkbox"/>
		</div>
	
	</div>

	<div style="text-align:right">
		<input type="submit" id="_submit" name="_submit" value="Se connecter" class="btn btn-primary" />
	</div>
</form>
{% endblock fos_user_content %}
